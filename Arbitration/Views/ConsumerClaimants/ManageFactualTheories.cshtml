@model IEnumerable<Arbitration.Models.FactualTheory>

@{
    ViewData["Title"] = "ManageFactualTheories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Managen Factual Theories</h1>

<p>
    <a asp-action="CreateFactualTheory">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CaseTheory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsPrimary)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CaseTheory.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsPrimary)
            </td>
            <td>
                <a asp-action="EditFactualTheory" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="DeleteFactualTheory" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
