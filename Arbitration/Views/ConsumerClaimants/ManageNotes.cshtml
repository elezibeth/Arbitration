@model IEnumerable<Arbitration.Models.GeneralNotes>

@{
    ViewData["Title"] = "ManageNotes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ManageNotes</h1>

<p>
    <a asp-action="CreateNote">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CaseTheory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CaseTheory.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="EditNote" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="DeleteNote" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
