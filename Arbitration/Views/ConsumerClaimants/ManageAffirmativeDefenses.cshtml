@model IEnumerable<Arbitration.Models.AnticipatedAffirmativeDefense>

@{
    ViewData["Title"] = "ManageAffirmativeDefenses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Manage Affirmative Defenses</h1>

<p>
    <a asp-action="CreateAffirmativeDefense">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CaseTheory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Neutralization)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CaseTheory.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Neutralization)
            </td>
            <td>
                <a asp-action="EditAffirmativeDefense" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="DeleteAffirmativeDefense" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
